<body>
  <h1>Editing Book</h1>
  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohigited this book being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <label>Title</label><br/>
  <div class="form"><%= f.text_field :title %></div>
  <label>Body</label><br/>
  <div class="form"><%= f.text_area :body %></div>
  <div class="form"><%= f.submit "Update Book" %></div>
  <%= link_to "Show", "/books/#{@book.id}" %>
  <span>|</span>
  <%= link_to "Back", books_path %>
  <% end %>
</body>