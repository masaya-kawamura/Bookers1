<body>
  <p class="notice"><%= flash[:notice] %></p>
  <h1>Books</h1>
<table>
  <thead>
    <tr>
      <th class="th-title">Title</th>
      <th class="th-body">Body</th>
      <th colspan="3" class="th-space"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
        <td class="td-title"><%= book.title %></td>
        <td class="td-body"><%= book.body %></td>

      <td><%= link_to "Show", "/books/#{book.id}" %></td>
      <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
      <td><%= link_to "Destroy", "/books/#{book.id}",method: :delete, "data-confirm" => "Are you sure?" %></td>
    <% end %>
    </tr>
  </tbody>
</table>
<%= form_with model:@book, url:"/books", local:true do |f| %>
<h2>New book</h2>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-denger">
      <h2><%= pluralize(@book.errors.count, "error") %> prohigited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <lavel>Title</lavel><br>
  <div class="form"><%= f.text_field :title %></div>
  <label>Body</lavel><br>
  <div class="form"><%= f.text_area :body %></div>
  <%= f.submit "Create Book", class: "create-box" %>
<% end %>
</body>